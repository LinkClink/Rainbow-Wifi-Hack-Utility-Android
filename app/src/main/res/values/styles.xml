<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:textColor">@color/colorText0</item>
    </style>

    <!-- Fragment style -->
    <style name="FragmentsTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/delius_unicase</item>
    </style>

    <!-- Button custom 0 -->
    <style name="ButtonTheme0" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/colorButtonBackground</item>
    </style>

    <!-- Button custom 1 -->
    <style name="ButtonTheme1" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/colorButtonBackground1</item>
    </style>

    <!-- Button custom 2 -->
    <style name="ButtonTheme2" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/colorButtonBackground2</item>
    </style>

    <!-- Button custom 3 -->
    <style name="ButtonTheme3" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/colorButtonBackground3</item>
    </style>

    <!-- Button custom 4 -->
    <style name="ButtonTheme4" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="android:background">@color/colorButtonBackground4</item>
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>
